				<field type="spacer" name="sapcer5" />
				<field name="googleFontsSecond" type="radio" class="btn-group" default="0" label="TPL_SVN_GFONTS_LABEL" description="TPL_SVN_GFONTS_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="googleFontNameSecond" type="text" class="" default="" label="TPL_SVN_FONT_NAME_LABEL" description="TPL_SVN_FONT_NAME_DESC" />
