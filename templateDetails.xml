	<config>
		<fields name="params">

			<!-- Basics -->
			<fieldset name="SVN_STYLE" addfieldpath="/templates/visario/admin/elements">
				<field name="asset_css" type="asset" extension="css" path="templates/visario/admin/style.css" />	
				<field name="logoFile" class="" type="media" default="" label="TPL_SVN_LOGO_LABEL" description="TPL_SVN_LOGO_DESC" />			
				<field name="sitetitle"  class="" type="text" default="" label="JGLOBAL_TITLE" description="JFIELD_ALT_PAGE_TITLE_LABEL" filter="string" />
				<field name="sitedescription"  class="" type="text" default="" label="JGLOBAL_DESCRIPTION" description="JGLOBAL_SUBHEADING_DESC" filter="string" />
				<field name="logoMarginTop" type="text" class="input-small" default="60" label="TPL_SVN_LOGOMARGIN_TOP_LABEL" description="TPL_SVN_LOGOMARGIN_TOP_DESC" />	
				<field name="logoMarginBottom" type="text" class="input-small" default="55" label="TPL_SVN_LOGOMARGIN_BOTTOM_LABEL" description="TPL_SVN_LOGOMARGIN_BOTTOM_DESC" />	
				<field type="spacer" name="spacer1" />
				<field name="templateStyle" type="list" default="1" label="TPL_SVN_TEMPLATECOLOR_LABEL" description="TPL_SVN_TEMPLATECOLOR_DESC">
					<option value="1">TPL_SVN_OPTION_STYLE1</option>
					<option value="2">TPL_SVN_OPTION_STYLE2</option>
					<option value="3">TPL_SVN_OPTION_STYLE3</option>
					<option value="4">TPL_SVN_OPTION_STYLE4</option>
					<option value="5">TPL_SVN_OPTION_STYLE5</option>
					<option value="6">TPL_SVN_OPTION_STYLE6</option>
				</field>
				<field type="spacer" name="spacer2" />
				<field name="templateBackgroundColor" class="input-small" type="color" default="#FFFFFF" label="TPL_SVN_BACKGROUND_COLOR_LABEL" description="TPL_SVN_BACKGROUND_COLOR_DESC" />
				<field type="spacer" name="spacer3" />
				<field name="templateColor" type="radio" class="btn-group" default="0" label="TPL_SVN_COLOR_LABEL" description="TPL_SVN_COLOR_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="templateLinkColor" class="input-small"  type="color" default="#008AE0" label="TPL_SVN_LINK_COLOR_LABEL" description="" />		
